<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tommasoberlose.lockdown.ui.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_container">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="32dp"
        android:id="@+id/bottom_container"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/bottom_container_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:text="@string/request_admin_permission_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_container_subtitle"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/request_admin_permission_msg"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardElevation="1dp"
            android:id="@+id/bottom_container_card"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceButton"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:id="@+id/bottom_container_action"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/action_grant_permission"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
